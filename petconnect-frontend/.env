# API Configuration
VITE_API_URL=http://localhost:5000/api

# Idle Timeout Configuration
# Time in milliseconds before user is considered idle
VITE_IDLE_TIMEOUT=1800000  # 30 minutes (30 * 60 * 1000)

# Warning time before auto-logout
# Time in milliseconds to show warning before logout
VITE_WARNING_TIME=120000   # 2 minutes (2 * 60 * 1000)

# For testing, you can reduce these values:
# VITE_IDLE_TIMEOUT=60000    # 1 minute
# VITE_WARNING_TIME=10000    # 10 seconds
